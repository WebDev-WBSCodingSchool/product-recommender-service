{
  "name": "product-recommender-service",
  "version": "1.0.0",
  "description": "A simple microservice for product recommendations using LLMs with function calling",
  "main": "dist/app.js",
  "scripts": {
    "watch:build": "tsc --watch",
    "watch:server": "node --watch dist/app.js",
    "dev": "concurrently --names \"TSC,EXPRESS\" --prefix-colors \"bgBlue.bold,bgGreen.bold\" \"npx tsc --watch\" \"node -r dotenv/config --watch --watch-preserve-output dist/app.js\"",
    "prestart": "npx tsc",
    "start": "node dist/app.js"
  },
  "keywords": [],
